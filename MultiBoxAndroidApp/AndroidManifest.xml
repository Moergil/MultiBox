<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="sk.hackcraft.multibox"
	android:versionCode="1"
	android:versionName="1.0">

	<uses-sdk
		android:minSdkVersion="15"
		android:targetSdkVersion="18"/>

	<application
		android:name="sk.hackcraft.multibox.MultiBoxApplication"
		android:allowBackup="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:theme="@style/AppTheme">
		<activity
			android:name="sk.hackcraft.multibox.PlayerActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>

		<activity
			android:name="sk.hackcraft.multibox.LibraryActivity"
			android:label="@string/app_name"
			android:parentActivityName="sk.hackcraft.multibox.PlayerActivity">
		</activity>
	</application>

</manifest>
