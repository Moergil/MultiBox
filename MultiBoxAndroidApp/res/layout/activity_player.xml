<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_standard_margin"
    tools:context=".PlayerActivity" >

	<fragment
    	android:id="@+id/fragment_player"
    	android:name="sk.hackcraft.multibox.PlayerInfoFragment"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	tools:layout="@layout/fragment_player_info" />
	
    <fragment
    	android:id="@+id/fragment_playlist"
    	android:name="sk.hackcraft.multibox.PlaylistFragment"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/fragment_player"
    	tools:layout="@layout/fragment_playlist" />

</RelativeLayout>
